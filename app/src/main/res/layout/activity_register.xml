<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email Address"
        android:layout_alignParentTop="true"
        android:id="@+id/textView" />




    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:id="@+id/BTcreateAccount"
        android:onClick="onClickRegisterButton"
        android:layout_below="@+id/TFpasswrodRegisterCon"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:id="@+id/BbackToLogin"
        android:onClick="onClickCancelButton"
        android:layout_below="@+id/BTcreateAccount"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TFemailRegister"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:hint="Enter Your Email Address"
        android:inputType="textPostalAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password"
        android:id="@+id/TFregisterPassword"
        android:layout_below="@+id/TFemailRegister"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/TFpasswordRegister"
        android:layout_below="@+id/TFregisterPassword"
        android:layout_alignParentStart="true"
        android:hint="Enter Your Password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Confirm Password"
        android:layout_below="@+id/TFpasswordRegister"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/TFpasswrodRegisterCon"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:hint="Confirm Your Password" />
</RelativeLayout>
